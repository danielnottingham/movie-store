<h1>#Show Category</h1>
<%= flash[:notice] %>

<%= link_to 'Voltar', movies_path %>
<br><br>

<dl>
  <dt>Title</dt>
  <dd><%= @category.title %></dd>
</dl>

<% if admin_signed_in? %>
  <%= link_to 'Edit', edit_category_path(@category), class: 'btn btn-primary' %> |
  <%= link_to 'Delete', category_path(@category), method: :delete, class: 'btn btn-primary' %> 
<% end %>
<br><br><br>

<strong><p>Filmes</p></strong>
<% @category.movies.each do |movie| %>
  <p><%= link_to movie.title, movie %></p>
<% end %>
