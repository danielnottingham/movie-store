 <% if @category.errors.any? %>
  <h4>We were unable to save we found some errors:</h4>
  <ul>
    <% @category.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @category, local: true do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.submit 'Save Category' %> 
  </div>
<% end %>